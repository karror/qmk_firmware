{
  "editor.insertSpaces": true,
  "files.exclude": {
    "**/.build": true,
    "**/*.hex": true,
    "**/*.bin": true,
    "**/*.uf2": true
  },
  "files.associations": {
    "*.h": "c",
    "*.c": "c",
    "*.inc": "c",
    "*.cpp": "cpp",
    "*.hpp": "cpp",
    "xstddef": "c",
    "type_traits": "c",
    "utility": "c",
    "ranges": "c"
  },
  "[markdown]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false
  },
  "python.formatting.provider": "yapf",
  "[json]": {
    "editor.formatOnSave": false
  },
  "clangd.arguments": [
    "--header-insertion=never"
  ],
  "C_Cpp_Runner.msvcBatchPath": ""
}